L = []
suma = 0
listaDniTygodnia = ["poniedziałku", "wtorku", "środy", "czwartku", "piątku", "soboty"]
for i in range(6):
    wartoscSprzedazy = float(input("Podaj wartość sprzedaży dla {}: ".format(listaDniTygodnia[i])))
    L.append(wartoscSprzedazy)
    suma += wartoscSprzedazy
print("Wyniki poszczególnych dni {}.\nWartość całkowita sprzedaży w tym tygodniu to {} zl.".format(L,suma))
